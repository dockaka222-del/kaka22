# Voice Cloning AI - CPU Only Configuration
# Copy this file to .env.production

# Application Settings
NODE_ENV=production
PORT=3000
HOST=0.0.0.0

# CPU-Only Mode (NO Hugging Face token required)
CPU_ONLY_MODE=true
NO_GPU_REQUIRED=true
LOCAL_PROCESSING_ONLY=true

# SSL & Domain Configuration
SSL_DOMAIN=voice.vipdayne.net
SSL_EMAIL=voice@vipdayne.net
VPS_IP=auto-detect
NEXT_PUBLIC_APP_URL=https://voice.vipdayne.net

# File Upload Settings
MAX_FILE_SIZE=10485760
SUPPORTED_FORMATS=wav,mp3,m4a,ogg,webm

# Local TTS Configuration (No external APIs)
VIETNAMESE_VOICE=vi-VN-HoaiMyNeural
TTS_ENGINE=edge-tts
TTS_FALLBACK_ENGINES=espeak,festival,sox
LOCAL_TTS_ONLY=true

# CPU Processing Settings
MAX_CONCURRENT_TTS=1
MAX_CONCURRENT_VOICE_CLONE=1
CPU_OPTIMIZATION=true
MEMORY_LIMIT=2048

# Security Settings
SESSION_SECRET=change-this-super-secret-key
CORS_ORIGIN=https://voice.vipdayne.net
FORCE_HTTPS=true

# SSL Automation
SSL_AUTO_RENEW=true
SSL_RENEWAL_DAYS_BEFORE=30

# Performance Optimization
CLEANUP_INTERVAL=300000
TEMP_FILE_TTL=1800000
AUTO_CLEANUP=true

# Monitoring
HEALTH_CHECK_ENABLED=true
LOG_LEVEL=info

# Rate Limiting
RATE_LIMIT_API=10
RATE_LIMIT_UPLOAD=5

# Processing Mode
VOICE_PROCESSING_MODE=cpu-enhanced-tts
ENABLE_VOICE_ANALYSIS=true
ENABLE_VOICE_TRANSFER=true
FALLBACK_TO_TTS_ONLY=true